@model HeyTeam.Web.Models.DashboardViewModels.IndexViewModel
@{
    string @returnUrl = "returnurl=/";
}
<h1>Dashboard</h1>
@if(Model.Squads != null && Model.Squads.Count > 0)
{    
    <h3>Squads</h3>
    <div>
    <div class="btn-group" role="group" aria-label="...">
        <a class="btn btn-primary" id="AddSquadButton" href="~/squads/new?@returnUrl">Add New Squad</a>
        
    </div>
    </div>
    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Squad Name</th>
                    <th>Coach</th>
                    <th>#Players</th>
                    <th>#Missing Evaluations</th>
                    <th>Next Session</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var squad in Model.Squads)
                {
                    <tr>
                        <td><a href='/squads/@squad.Cells["squadid"]?@returnUrl'>@squad.Cells["squadname"]</a></td>
                        <td></td>
                        <td><a href='/squads/@squad.Cells["squadid"]/players?@returnUrl'>@squad.Cells["numberofplayers"]</a></td>
                        <td></td>
                        <td></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<h3>My Action Items</h3>
<h3>Upcoming Events</h3>
<h3>Recent Activity</h3>